<div class="row">
  <div class="col-auto">
    <h2>Welcome to blog site {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Blog:</h3>

    <form class="form new-blog-form">
      <div class="form-group">
        <label for="blog-name">Title:</label>
        <input class="form-input" type="text" id="blog-name" name="blog-name" />
      </div>
      <div class="form-group">
        <label for="add-details">Add details:</label>
        <input class="form-input" type="text" id="add-details" name="add-details" />
      </div>
      <div class="form-group">
        <label for="blog-desc">Contents:</label>
        <textarea class="form-input" id="blog-desc" name="blog-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Add/Create New Blog!</button>
      </div>
    </form>
  </div>

  {{#if Blogs.length}}
  <div class="col-md-6 blog-list">
    <h3>Current Blogs:</h3>

    {{#each Blogs as |Blog|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/blog/{{Blog.id}}">{{Blog.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{Blog.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/dashboard.js"></script>
